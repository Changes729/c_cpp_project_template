{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "shell",
      "command": "./script/build.sh",
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "label": "run",
      "type": "shell",
      "command": "./script/build.sh -r"
    },
    {
      "label": "rebuild",
      "type": "shell",
      "command": "./script/build.sh -re"
    },
    {
      "label": "debug-build",
      "type": "shell",
      "command": "./script/build.sh --debug"
    },
    {
      "label": "cross-build-arm",
      "type": "shell",
      "command": "./script/build.sh --arm"
    }
  ]
}
